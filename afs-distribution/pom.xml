        <groupId>com.powsybl</groupId>
        <version>3.5.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <packaging>pom</packaging>
    <artifactId>powsybl-distribution-afs</artifactId>
    <name>Distribution</name>
