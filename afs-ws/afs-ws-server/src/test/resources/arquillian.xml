<arquillian xmlns="http://jboss.org/schema/arquillian"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>
    <container qualifier="wildfly27" default="true">
        <configuration>
            <property name="jbossHome">target/wildfly-27.0.0.Final/</property>
            <property name="modulePath">target/wildfly-27.0.0.Final/modules</property>
        </configuration>
    </container>
</arquillian>
